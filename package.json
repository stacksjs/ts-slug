{
  "name": "ts-slug",
  "type": "module",
  "version": "0.1.0",
  "description": "Generate slugs from strings. Browser & Bun/Node.js compatible.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-slug#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-slug.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-slug/issues"
  },
  "keywords": [
    "typescript",
    "slug",
    "slugify",
    "string",
    "url",
    "browser",
    "bun",
    "node"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun --bun build.ts",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "prepublishOnly": "bun --bun run build",
    "test": "bun test",
    "lint": "bunx --bun pickier lint .",
    "lint:fix": "bunx --bun pickier lint . --fix",
    "format": "bunx --bun pickier format .",
    "format:fix": "bunx --bun pickier format . --write",
    "changelog": "bunx logsmith --verbose",
    "changelog:generate": "bunx logsmith --output CHANGELOG.md",
    "release": "bun run changelog:generate && bunx bumpx prompt --recursive",
    "postinstall": "bunx git-hooks",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "devDependencies": {
    "@stacksjs/docs": "^0.70.23",
    "better-dx": "^0.2.5"
  },
  "overrides": {
    "unconfig": "0.3.10"
  },
  "git-hooks": {
    "pre-commit": {
      "staged-lint": {
        "*.{js,ts,json,yaml,yml,md}": "bunx --bun pickier lint --fix"
      }
    },
    "commit-msg": "bunx gitlint --edit .git/COMMIT_EDITMSG"
  }
}
